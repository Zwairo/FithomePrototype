<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2D9D4"
    tools:context=".DailySport">

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_close_24"
            android:onClick="backtohome"
            tools:ignore="OnClick">

        </ImageView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/cherceve"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gunluksure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bugün Geçirilen Süre: 3dk "
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/toplamsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplam Süre: 176dk "
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/toplamgunvelevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sporda 5.Günün / Level :5 "
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2D9D4"
        android:layout_marginTop="224dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/cherceve"
                        >
                        <LinearLayout
                            android:id="@+id/spor1"
                            android:layout_weight="0.8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <EditText

                                android:layout_width="34dp"
                                android:layout_height="39dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/cherceve"
                                android:text="1"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textStyle="bold"></EditText>

                            <TextView

                                android:id="@+id/name1"
                                android:layout_width="130dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="SQUAD \n3X10"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textStyle="bold"></TextView>


                            <ImageView

                                android:id="@+id/dificult1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="40dp"
                                android:src="#E53935">
                            </ImageView>

                            <Button

                                android:id="@+id/info1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/infovector"
                                ></Button>
                            <Button

                                android:id="@+id/ok1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/oke"
                                ></Button>



                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/cherceve"
                        >

                        <EditText
                            android:layout_width="34dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cherceve"
                            android:text="2"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></EditText>

                        <TextView

                            android:id="@+id/name2"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="SQUAD \n3X10"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:id="@+id/dificult2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:src="#49FB03">
                        </ImageView>

                        <Button
                            android:id="@+id/info2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/infovector"
                            ></Button>
                        <Button
                            android:id="@+id/ok2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/oke"
                            ></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/cherceve"
                        >

                        <EditText
                            android:layout_width="34dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cherceve"
                            android:text="3"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></EditText>

                        <TextView

                            android:id="@+id/name3"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="SQUAD \n3X10"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:id="@+id/dificult3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:src="#FDD835">
                        </ImageView>

                        <Button
                            android:id="@+id/info3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/infovector"
                            ></Button>
                        <Button
                            android:id="@+id/ok3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/oke"
                            ></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/cherceve"
                        >

                        <EditText
                            android:layout_width="34dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cherceve"
                            android:text="4"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></EditText>

                        <TextView

                            android:id="@+id/name4"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="SQUAD \n3X10"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:id="@+id/dificult4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:src="#E53935">
                        </ImageView>

                        <Button
                            android:id="@+id/info4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/infovector"
                            ></Button>
                        <Button
                            android:id="@+id/ok4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/oke"
                            ></Button>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/cherceve"
                        >

                        <EditText
                            android:layout_width="34dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cherceve"
                            android:text="5"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></EditText>

                        <TextView

                            android:id="@+id/name5"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="SQUAD \n3X10"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:id="@+id/dificult5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:src="#E53935">
                        </ImageView>

                        <Button
                            android:id="@+id/info5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/infovector"
                            ></Button>
                        <Button
                            android:id="@+id/ok5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/oke"
                            ></Button>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>



        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>